  </div>

  <div class="field">
    <%= form.label :shipping_weight %>
    <%= form.text_field :shipping_weight, id: :product_shipping_weight %>
  </div>

  <div class="field">
    <%= form.label :image_thumbnail %>
    <%= form.text_field :image_thumbnail, id: :product_image_thumbnail %>
  </div>

  <div class="field">
    <%= form.label :image_full %>
