<p id="notice"><%= notice %></p>

<h1>Store</h1>

<hr/>

<% if current_user.try(:admin?) %>
  <div>
    <%= link_to 'Continue to Products Page', products_path, class: 'btn btn-success' %>
  </div>
<% end %>

<div>
  <%= paginate @stores %>
</div>

<div class="table-responsive">
  <table class="table text-left">
    <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Avg. Rating</th>
    </tr>
    </thead>

    <tbody>
    <% @stores.each do |store| %>
      <tr>
        <td><%= link_to store.name, store %></td>
        <td><%= store.description %></td>
        <td><%= store.product_reviews.all.average(:rating).to_i  %></td>
      </tr>
    <% end %>
    </tbody>
  </table>

</div>

<br>

<%= link_to 'New Store', new_store_path %>
