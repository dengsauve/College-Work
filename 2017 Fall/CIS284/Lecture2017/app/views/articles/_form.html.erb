<%= form_with(model: article, local: true) do |form| %>
  <% if article.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(article.errors.count, "error") %> prohibited this article from being saved:</h2>

      <ul>
      <% article.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title, id: :article_title %>
  </div>

  <div class="field">
    <%= form.label :author %>
    <%= form.text_field :author, id: :article_author %>
  </div>

  <div class="field">
    <%= form.label :published_date %>
    <%= form.datetime_select :published_date, id: :article_published_date %>
  </div>

  <div class="field">
    <%= form.label :published %>
    <%= form.check_box :published, id: :article_published %>
  </div>

  <div class="field">
    <%= form.label :context %>
    <%= form.text_area :context, id: :article_context %>
  </div>

  <div class="field">
    <%= form.label :avatar_url %>
    <%= form.text_field :avatar_url, id: :article_avatar_url %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
