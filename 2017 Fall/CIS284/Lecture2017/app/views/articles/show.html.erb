<p id="notice"><%= notice %></p>

<h1>Article</h1>

<hr/>

<article class='well col-xs-12 col-md-6 col-md-offset-3'>

  <div class="col-xs-12">
    <img src="<%= @article.avatar_url %>" class="img-circle pull-left">
  </div>
  <p class="col-xs-12">
    <%= time_ago_in_words @article.published_date %> ago, <strong><%= @article.author %></strong> wrote:
  </p>



  <h4 class="text-left col-xs-12">
    <%= @article.title %>
  </h4>

  <p class="text-left col-xs-12">
    <strong><%= @article.published ? "Article is Published" : "Article is not Published" %></strong>
  </p>

  <p class="text-left col-xs-12">
    <%= @article.context.html_safe %>
  </p>

</article>

<div class="col-xs-12">
  <%= link_to 'Edit', edit_article_path(@article), class: 'btn btn-info' %>
  <%= link_to 'Back', articles_path, class: 'btn btn-default' %>
</div>
