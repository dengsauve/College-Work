<%= form_with(model: puzzle, local: true, class: 'text-left col-md-6 col-md-offset-3') do |form| %>

  <hr/>

  <div class="form-group">
    <%= form.label :puzzle_name %>
    <%= form.text_field :puzzle_name, id: :puzzle_name, class: 'form-control', required: 'required' %>
  </div>

  <div class="field">
    <%= form.label :word_list %>
    <%= form.text_area :word_list, id: :word_list, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= form.submit 'Create Puzzle', :class => 'btn btn-success' %>
  </div>
<% end %>
